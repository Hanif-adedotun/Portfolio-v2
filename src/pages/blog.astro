---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import blogPosts from "../data/blog-posts.json";
---

<Layout title="Blog">
  <div class="min-h-screen p-6 max-w-4xl mx-auto">
    <Header />

    <main class="space-y-12">
      <section>
        <h1 class="text-3xl font-bold text-gray-900 dark:text-white mb-8">
          All Articles
        </h1>
        <div class="space-y-6">
          {blogPosts.map((post) => (
            <article class="border-b border-gray-200 dark:border-gray-800 pb-6 last:border-0">
              <a
                href={`/blog/${post.slug}`}
                class="block group hover:opacity-80 transition-opacity"
              >
                <h2 class="text-xl font-semibold text-gray-900 dark:text-white mb-2 group-hover:underline">
                  {post.title}
                </h2>
                <p class="text-sm text-gray-600 dark:text-gray-400 mb-3 line-clamp-2">
                  {post.intro}
                </p>
                <div class="flex items-center gap-4 text-xs text-gray-500 dark:text-gray-500">
                  <span>{post.author}</span>
                  <span>â€¢</span>
                  <time datetime={post.date}>
                    {new Date(post.date).toLocaleDateString("en-US", {
                      year: "numeric",
                      month: "long",
                      day: "numeric",
                    })}
                  </time>
                </div>
              </a>
            </article>
          ))}
        </div>
      </section>
    </main>
  </div>
</Layout>

