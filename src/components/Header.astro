---
import Navbar from "./Navbar.astro";
import { Icon } from "astro-icon/components";
---

<header class="mb-8">
  <div class="flex justify-between items-center mb-8">
    <Navbar />
    <button
      id="theme-toggle"
      class="text-gray-500 dark:text-gray-400 hover:text-gray-700 dark:hover:text-white transition-colors"
      aria-label="Toggle theme"
    >
      <span class="dark:hidden">üåô</span>
      <span class="hidden dark:inline">‚òÄÔ∏è</span>
    </button>
  </div>

  <section class="flex items-start gap-6">
    <img
      src="/src/assets/sq-logo.jpg"
      alt="Profile"
      class="w-28 h-28 rounded-lg"
    />
    <div>
      <h1 class="text-2xl font-bold text-gray-900 dark:text-white mb-1">
        Hanif Adedotun
      </h1>
      <p class="text-sm text-gray-600 dark:text-gray-400 mb-2">hey@hanif.one</p>
      <div class="flex gap-3 items-center">
        <a
          href="https://github.com/hanif-adedotun"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
          aria-label="GitHub"
        >
          <Icon name="mdi:github" class="w-5 h-5" />
        </a>
        <a
          href="https://x.com/@devhanif"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
          aria-label="X (Twitter)"
        >
          <Icon name="mdi:twitter" class="w-5 h-5" />
        </a>
        <a
          href="https://linkedin.com/in/hanif-adedotun"
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
          aria-label="LinkedIn"
        >
          <Icon name="mdi:linkedin" class="w-5 h-5" />
        </a>
        <a
          href="/feed.xml"
          class="text-gray-500 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white transition-colors"
          aria-label="RSS Feed"
        >
          <Icon name="mdi:rss" class="w-5 h-5" />
        </a>
      </div>
      <a
        href="https://wakatime.com/@94742452-cde1-48b8-815f-7eca77837463"
        target="_blank"
        rel="noopener noreferrer"
        class="mt-2 inline-block"
      >
        <img
          src="https://wakatime.com/badge/user/94742452-cde1-48b8-815f-7eca77837463.svg"
          alt="Wakatime stats"
        />
      </a>
    </div>
  </section>
</header>

<script is:inline>
  const themeToggle = document.getElementById("theme-toggle");

  themeToggle?.addEventListener("click", () => {
    const isDark = document.documentElement.classList.toggle("dark");
    localStorage.theme = isDark ? "dark" : "light";
  });
</script>
