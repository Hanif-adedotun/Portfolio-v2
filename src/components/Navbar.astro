---
const navItems = [
  { name: "Home", path: "/" },
  { name: "Blog", path: "https://blog.hanif.one" },
  { name: "Notes", path: "/notes" },
  { name: "Projects", path: "/projects" },
  { name: "Tools", path: "/tools" },
];
---

<nav class="text-sm">
  <span class="text-gray-500 dark:text-gray-400">&gt;_</span>
  {
    navItems.map((item, index) => (
      <a
        href={item.path}
        class="hover:text-gray-900 dark:hover:text-white transition-colors"
      >
        {item.name}
      </a>
    ))
  }
</nav>

<style>
  nav a {
    margin-left: 0.5rem;
  }
</style>
